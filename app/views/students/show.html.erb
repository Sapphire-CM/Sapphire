<% title course_term_title, account_fullname_with_matriculation_number(@term_registration.account) %>

<%= render "terms/sidebar", term: current_term %>

<% if @student_group.present? %>
  <p>This student is part of <%= link_to @student_group.title, term_tutorial_group_student_group_path(current_term, @tutorial_group, @student_group) %></p>
<% end %>

<h2>Submissions</h2>

<% if @exercise_registrations.any? %>
  <table class='small-12'>
    <thead>
      <tr>
        <th>Exercise</th>
        <th>Points</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @exercise_registrations.each do |exercise_registration| %>
      <tr>
        <td><%= exercise_registration.exercise.title %></td>
        <td><%= exercise_registration.points %>/<%= exercise_registration.exercise.achievable_points %></td>
        <td class='text-right'>
          <%= link_to "Show", exercise_submission_path(exercise_registration.exercise, exercise_registration.submission), class: "small button" %>
          <%= link_to "Evaluate", single_evaluation_path(exercise_registration.submission), class: "small button" %>
        </td>
      </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th>Sum:</th>
        <th><%= @term_registration.points %>/<%= @term_registration.term.achievable_points %></th>
        <th colspan='2'></th>
      </tr>

    </tfoot>
  </table>
<% else %>
  <p>No Submissions for this student</p>
<% end %>

<p><strong>Grade: <%= @grading_scale.grade_for_term_registration(@term_registration) %></strong></p>