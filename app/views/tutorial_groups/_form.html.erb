<%= simple_form_for [term, tutorial_group], html: {class: "custom"} do |f| %>
  <%= f.input :term_id, as: :hidden %>

  <%= f.input :title %>
  <%= f.input :description, input_html: { rows: 3 } %>

  <% if @tutorial_group.new_record? %>
    <%= link_to "Cancel", term_path(@term), class: "secondary button" %>
  <% end %>

  <%= f.submit class: "button"%>
<% end %>
