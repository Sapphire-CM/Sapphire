<% title course_term_title, "Tutorial Groups" %>

<%= render "terms/sidebar", term: current_term %>

<% if @tutorial_groups.any? %>
  <table class='small-12 sortable'>
    <thead>
      <th>Name</th>
      <th>Tutor(s)</th>
    </thead>
    <tbody>
      <% @tutorial_groups.each do |tutorial_group| %>
        <tr>
          <td><%= link_to tutorial_group.title, term_tutorial_group_path(current_term, tutorial_group) %></td>
          <td><%= tutor_names tutorial_group.tutor_accounts %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No tutorial groups present.</p>
<% end %>

<% if policy(TutorialGroupPolicy.term_policy_record(@term)).new? %>
  <p>
    <%= link_to "New Tutorial Group", new_term_tutorial_group_path(current_term), class: "small button" %>
  </p>
<% end %>
