<%= event_box(updated) do |event| %>
	<%= event.account.fullname %>
		<% if event.added.present? %>
			<strong>added</strong> 
				<% event.added.each do |student| %>
					<%= Account.find(TermRegistration.find(student).account_id).fullname %>
				<% end %>
				to <%= event.student_group_title %>
		<% end %>
		<% if event.added.present? && event.removed.present? %>
			and
		<% end %>
		<% if event.removed.present? %>
			<strong>removed</strong> 
				<% event.removed.each do |student| %>
					<%= Account.find(TermRegistration.find(student).account_id).fullname %>
				<% end %>
				from <%= event.student_group_title %>
		<% end %>
		
<% end %>

