<% if index+1 == @term.grading_scale.length %>
  <%= item[0] %>
<% else %>
  <%= simple_form_for :term, url: term_grading_scale_path(@term), method: :patch do |f| %>
    <%= f.number_field "grading_scale[#{item[1].to_s}]",
      value: item[0],
      min: 1,
      max: @term.points > 0 ? (@term.points-1) : 9999,
      class: 'margin-none' %>
  <% end %>
<% end %>
