<ul class='left'>
  <li class='divider'></li>

  <%= render 'course_term_navigation' %>

  <li class='divider'></li>

  <li class='has-dropdown'>
    <%= link_to "Exercises", '#' %>
    <ul class='dropdown'>
      <% if current_term.exercises(true).any? %>
        <% current_term.exercises.each do |exercise| %>
          <li><%= link_to exercise.title, term_exercise_path(current_term, exercise) %></li>
        <% end %>
      <% else %>
        <li><%= link_to "(no exercises)", '#' %></li>
      <% end %>
    </ul>
  </li>

  <li class='has-dropdown'>
    <%= link_to "Tutorial Groups", '#' %>
    <ul class='dropdown'>
      <% if current_term.tutorial_groups(true).any? %>
        <% current_term.tutorial_groups.each do |tutorial_group| %>
          <li><%= link_to tutorial_group_title(tutorial_group), term_tutorial_group_path(current_term, tutorial_group) %></li>
        <% end %>
      <% else %>
        <li><%= link_to "(no tutorial groups)", '#' %></li>
      <% end %>
    </ul>
  </li>
</ul>
