<tr class="index_entry term" id="<%= "term_id_#{term.id}" %>">
  <td><%= link_to "#{term.title}", course_term_path(course, term) %></th>
  <td><%= pluralize term.tutorial_groups.count, "Tutorial" %></td>
  <td><%= term.students.count %></td>

  <td class='right-aligned minimum-width'>
    <%= link_to "<i class='general foundicon-edit'></i>".html_safe, edit_course_term_path(course, term), class: 'index_entry_edit', remote: true, data: {"reveal-id" => "reveal_modal"} %>

    <%= link_to "<i class='general foundicon-remove'></i>".html_safe, course_term_path(course, term), class: 'index_entry_remove', method: :delete, confirm: "Are you sure?", remote: true %>
  </td>
</tr>