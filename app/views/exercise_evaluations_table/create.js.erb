var $button = $('.exercise-evaluations-table-create-submission[data-student-group-id=<%= @student_group.id %>]')
$button.addClass("success").text("Show").attr("href","<%=j submission_path(@submission) %>").removeAttr("data-confirm").removeClass("exercise-evaluations-table-create-submission")

<% @data.rating_groups.each do |rating_group| %>
  $('.<%= exercise_evaluations_evaluation_group_results_id(@student_group, rating_group) %> b').text('<%=j exercise_evaluations_evaluation_group_result(@data, @student_group, rating_group).to_s %>')

  <% rating_group.ratings.each do |rating| %>
    $('.submission-evaluation-<%= @student_group.id %>-<%= rating.id %>').html('<%=j exercise_evaluations_table_form @data, @student_group, rating %>')
  <% end %>
<% end %>

$('.<%= exercise_evaluations_result_id(@student_group) %> b').html("<%=j exercise_evaluations_submission_result(@data, @student_group) %>")