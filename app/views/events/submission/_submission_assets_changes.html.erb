<div class='description'>
  <ul>
  <% submission_assets[:added].each do |change| %>
    <li>Added <strong>'<%= submission_asset_file_change(change[:path], change[:file]) %>'</strong></li>
  <% end %>

  <% submission_assets[:updated].each do |change| %>
    <% if change[:file].is_a?(Array) %>
        <% if change[:content_type].is_a?(Array) %>
          <li>Renamed Folder <strong>'<%= submission_asset_file_change(change[:path], change[:file].first) %>'</strong> to <strong>'<%= submission_asset_file_change(change[:path], change[:file].last) %>'</strong></li>
        <% else %>
          <li>Renamed File <strong>'<%= submission_asset_file_change(change[:path], change[:file].first) %>'</strong> to <strong>'<%= submission_asset_file_change(change[:path], change[:file].last) %>'</strong></li>
        <% end %>
    <% else %>
      <li>Updated <strong>'<%= submission_asset_file_change(change[:path], change[:file]) %>'</strong></li>
    <% end %>
  <% end %>

  <% submission_assets[:destroyed].each do |change| %>
    <li>Removed <strong>'<%= submission_asset_file_change(change[:path], change[:file]) %>'</strong></li>
  <% end %>
  </ul>
</div>
