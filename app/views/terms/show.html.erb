<% title @term.title %>

<h1><%= course_term_title(@course, @term) %></h1>

<dl class='tabs'>
  <dd class='active'>
    <a href='#tutorials'>Tutorial groups</a>
  </dd>
  <dd><a href='#exercises'>Exercises</a></dd>
</dl>

<ul class='tabs-content'>
  <li id='tutorialsTab' class='active'>
    <div class='row'>
      <div class='three columns'>
        <% if @tutorial_groups.any? %>
        <table class='twelve'>
          <thead>
            <tr>
              <th>Title</th>
              <th>Tutor</th>
              <th>Students</th>
            </tr>
          </thead>
          <tbody>
            <% @tutorial_groups.each do |tutorial_group| %>
              <tr>
                <td><%= tutorial_group.title %></td>
                <td></td>
                <td><%= tutorial_group.students.count %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <% else %>
          <p>No tutorial groups present.</p>
        <% end %>
      </div>
    </div>
  </li>
  <li id='exercisesTab'>
    <div class='panel'>Dummy Data</div>
    
    <table>
      <thead>
        <tr>
          <th>Exercise</th>
          <th>Description</th>
          <th>Announce</th>
          <th>Deadline</th>
          <th>Points</th>
          <th>Percent</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>1</td>
          <td>Newsgroup New Thread</td>
          <td>Fri 05 Oct 2012 lecture</td>
          <td>Wed 10 Oct 2012 23:59</td>
          <td>25</td>
          <td>11.3%</td>
        </tr>
      </tbody>
    </table>
  </li>
</ul>
