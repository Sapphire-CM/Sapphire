<tr id="<%= "rating_id_#{rating.id}" %>"
    data-update-position-action="<%= update_position_course_term_exercise_rating_group_rating_path(current_course, current_term, @exercise, rating.rating_group, rating) %>"
    class="index_entry rating" >
  <td class='title-column'>
    <% if rating.description.blank? %>
      <%= rating.title %>
    <% else %>
      <span data-tooltip class="has-tip" title="<%= rating.description %>">
        <%= rating.title %>
      </span>
    <% end %>
  </td>

  <td class='value-column right-aligned'>
    <%= rating_points_description rating %>
  </td>

  <td class='buttons-column right-aligned minimum-width'>
    <%= link_to general_foundicon(:edit), edit_course_term_exercise_rating_group_rating_path(current_course, current_term, @exercise, rating.rating_group, rating), class: 'index_entry_edit', remote: true, data: {"reveal-id" => "reveal_modal"} %>

    <%= link_to general_foundicon(:remove), course_term_exercise_rating_group_rating_path(current_course, current_term, @exercise, rating.rating_group, rating), class: 'index_entry_remove', method: :delete, data: { confirm: "Are you sure?" }, remote: true %>
  </td>
</tr>
