<%= simple_form_for @rating, :as => :rating, url: [current_course, current_term, @rating.exercise, @rating.rating_group, @rating.dup.becomes(Rating)], html: {id: "rating_form"} do |f| %>
  <%= f.input :title %>
  <%= f.input :description, input_html: { rows: 3 } %>
  <%= f.input :type,
    label: "Type",
    collection: ratings_form_collection,
    as: :select,
    item_wrapper_class: 'inline',
    include_blank: false
    %>

    <div class='rating_value_fields'>
      <%= f.input :value %>
      <%= f.input :min_value %>
      <%= f.input :max_value %>
    </div>

  <%= link_to "Cancel", course_term_exercise_rating_group_path(current_course, current_term, @exercise, @rating_group), class: "secondary button" %>
  <%= f.submit class: "button" %>
<% end %>