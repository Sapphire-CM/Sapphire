<%= simple_form_for course_term_exercise_rating_group_ratings_path(current_course, current_term, @exercise, @rating_group, @rating) do |f| %>
  <%= f.input :title %>
  <%= f.input :description, input_html: { rows: 3 } %>
  <%= f.input :type,
    label: "Type",
    collection: [['Yes/No Value', BinaryNumberRating.name],
                    ['Yes/No Percentage', BinaryPercentRating.name],
                    ['Min/Max Value', ValueNumberRating.name],
                    ['Min/Max Percentage', ValuePercentRating.name]],
    as: :radio_buttons,
    item_wrapper_class: 'inline' %>

  <%= link_to "Cancel", course_term_exercise_rating_group_path(current_course, current_term, @exercise, @rating_group), class: "secondary button" %>
  <%= f.submit class: "button" %>
<% end %>