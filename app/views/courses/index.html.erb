<% title "Courses" %>

<% sidebar do %>
  <%= link_to "New Course", new_course_path, class: "small button" %>
<% end %>

<% if @courses.any? %>
  <table class='twelve'>
    <thead>
      <tr>
      <th>Title</th>
      <th>Terms</th>
      <th>Course Leader</th>
      <th></th>
      </tr>
    </thead>
    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.title %></td>
          <td><%= course.terms.count %></td>
          <td>Keith Andrews</td>
          <td class='right-aligned'>
            <%= link_to "View", course_path(course), class: "tiny button" %>
            <%= link_to "Edit", edit_course_path(course), class: "tiny button" %>
            <%= link_to "Delete", course_path(course), class: "tiny alert button", method: :delete, confirm: "Are you sure?" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>There are no courses present.</p>
<% end %>
