<%= event_box(created) do |event| %>
  <%= event.account.fullname %>
  <% if event.file_count > 0 %>
    <strong>uploaded <%= pluralize event.file_count, 'file' %></strong>
  <% else %>
    <strong>created</strong>
    submission
  <% end %>
  for <strong><%= link_to event.exercise_title, submission_path(event.submission_id) %></strong>.

  <% if event.file_count > 0 %>
    <%= render "events/submission/submission_assets_changes", submission_assets: event.submission_assets, event: event %>
  <% end %>
<% end %>
