<% if staff_account? %>
  <%= event_box(published, :staff) do |event| %>
    <%= event.account.fullname %> <strong>published results</strong>
    for <strong><%= link_to event.exercise_title, exercise_submissions_path(event.exercise_id) %></strong>
    for tutorial group <%= event.tutorial_group_title %>
  <% end %>
<% else %>
  <%= event_box(published, :student) do |event| %>
    <%= event.account.fullname %> <strong>published
      <%= link_to 'results', exercise_student_results_path(event.exercise_id) %></strong>
    for <strong><%= link_to event.exercise_title, exercise_student_submission_path(event.exercise_id) %></strong>
    for tutorial group <%= event.tutorial_group_title %>
  <% end %>
<% end %>
