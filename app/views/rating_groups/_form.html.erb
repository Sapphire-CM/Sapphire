<%= simple_form_for [current_course, current_term, @exercise, @rating_group], remote: true, html: {id: "rating_group_form" } do |f| %>
  <div class='row'>
    <div class='large-12'>
      <%= f.input :title %>
      <%= f.input :global %>
      <%= f.input :points %>

      <div>
        <%= f.label 'Point range' %>
        <%= link_to_function "Change ", 'toggle_point_range_fields(this)', :id => "point_range_toggle_button" %>
      </div>
    </div>
  </div>


  <div class='row' id='point_range_fields'>
    <div class='large-12'>
      <div class='radius panel point_range_fields'>
        <%= f.input :enable_range_points, as: :hidden %>
        <%= f.input :min_points %>
        <%= f.input :max_points %>
      </div>
    </div>
  </div>

  <div class='row'>
    <div class='large-12'>
      <%= f.input :description, input_html: { rows: 3 } %>
    </div>
  </div>

  <div class='row'>
    <div class='large-12 large-centered columns text-center'>
      <%= f.submit class: "button" %>
    </div>
  </div>
<% end %>
