<% title "#{set_tutor_label} for #{@tutorial_group.title}"  %>

<% if ! @tutorial_group.tutor.blank? %>
  <p>
    Current Tutor: <%= @tutorial_group.tutor.fullname %>
    <%= link_to "Clear", tutorial_group_clear_tutor_registration_path(@tutorial_group), class: "small alert button", method: :delete, data: { confirm: "Are you sure?" } %>
    <%= link_to "Cancel", tutorial_group_path(@tutorial_group), class: "small button" %>
  </p>
<% end %>

<% @create_path = tutorial_group_create_tutor_registration_path(@tutorial_group) %>

<%= render 'accounts/accounts_list', { buttons_partial_view: 'account_selection_buttons', search_path: tutorial_group_new_tutor_registration_path(@tutorial_group) } %>
