<% title submission_author(@submission), @exercise.title, small: true %>

<% if @exercise.submission_viewer? %>
<div class='row'>
  <div class='small-9 columns'>
    <%= link_to "Open Viewer", submission_viewer_path(@submission), class: "small button", target: "sapphire_submission_viewer" %>
  </div>
</div>
<% end %>

<div class='row'>
  <div class='small-9 columns'>
  <% @submission.submission_assets.order(:file).each do |submission_asset| %>
    <h4>
      <%= shorten(File.basename(submission_asset.file.to_s), 60) %>
      <small><%= number_to_human_size(submission_asset.file.size) %></small>
      <% if submission_asset.asset_identifier.present? %>
        , <%= submission_asset.asset_identifier %>
      <% end %>
    </h4>
    <%= inline_submission_asset submission_asset %>
  <% end %>

  <p><%= link_to "Back to Submissions", exercise_submissions_path(@exercise) %></p>
  </div>
  <div class='small-3 columns evaluations-list'>
    <%= render "evaluations_list", evaluation_groups: @evaluation_groups, submission_evaluation: @submission.submission_evaluation %>
  </div>
</div>
