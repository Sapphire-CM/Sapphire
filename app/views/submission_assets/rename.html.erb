<% title @submission_asset.exercise.title, submission_author(@submission_asset.submission) %>

<%= render "terms/sidebar", term: @submission_asset.submission.term %>
<%= render "exercises/subnav", exercise: @submission_asset.exercise %>

<div class='row'>
  <div class='small-12 columns text-right'>
    <%= link_to "Back to Files", tree_submission_path(@submission_asset.submission), class: "tiny button" %>
  </div>
</div>

<%= simple_form_for :submission_asset, method: :patch, url: submission_asset_path(@submission_asset) do |f| %>
  <table class='small-12'>
    <thead>
    <th>Previous filename</th>
    <th>Change filename</th>
    <th></th>
    </thead>
    <tbody>
    <tr class='association-item'>
      <td> <%= @submission_asset.filename %> </td>

      <td> <%= f.input :filename %> </td>
    </tr>
    </tbody>
  </table>

  <p><%= f.button :submit, "Apply changes" %></p>

<% end %>