<ul class='left'>
  <li class='divider'></li>

  <%= render 'course_term_navigation' %>

  <li class='divider'></li>

  <li class='has-dropdown'>
    <%= link_to "Exercises", '#' %>
    <ul class='dropdown'>
      <% if @term.exercises(true).any? %>
        <% @term.exercises.each do |exercise| %>
          <li class='<%= 'has-dropdown' if @term.student_groups.any? %>'>
            <%= exercise_topbar_link exercise %>

            <% if @term.student_groups.any? %>
              <ul class='dropdown'>
                <li><%= link_to 'Manage', exercise_path(exercise) %></li>
                <li><%= link_to 'Evaluate', exercise_evaluation_path(exercise) %></li>
              </ul>
            <% end %>
          </li>
        <% end %>
      <% else %>
        <li><%= link_to "(no exercises)", '#' %></li>
      <% end %>
    </ul>
  </li>

  <li class='has-dropdown'>
    <%= link_to "Tutorial Groups", '#' %>
    <ul class='dropdown'>
      <% if @term.tutorial_groups(true).any? %>
        <% @term.tutorial_groups.each do |tutorial_group| %>
          <li><%= link_to tutorial_group_title(tutorial_group), tutorial_group_path(tutorial_group) %></li>
        <% end %>
      <% else %>
        <li><%= link_to "(no tutorial groups)", '#' %></li>
      <% end %>
    </ul>
  </li>
</ul>
