# Ignore bundler config
/.bundle

# Ignore textmate configuration
/.tm_properties

# Ignore the default SQLite database.
/db/*.sqlite3

# Ignore database.yml because this file depends on the current setup
/config/database.yml

# Ignore mail.yml because it is only needed in production and depends on the current setup
/config/mail.yml

# Ignore all logfiles and tempfiles.
/log/*.log
/tmp
/uploads
/emails
/persistent
/exports
/coverage

# Ignore all database dumps
/db/dumps/*.sql
/db/dumps/*.sql.gz

# Ignore ERD-Diagram generated by rails_erd
/erd.pdf

# rerun informations for cucumber
/rerun.txt

# Ignore SublimeText files
*.sublime-project
*.sublime-workspace

# Ignore custom workspace startup script
/startup.sh

