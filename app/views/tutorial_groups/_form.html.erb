<%= simple_form_for @tutorial_group, html: {class: "custom"} do |f| %>
  <%= f.input :term_id, as: :hidden %>

  <%= f.input :title %>
  <%= f.input :description, input_html: { rows: 3 } %>

  <%= link_to "Cancel", (@tutorial_group.new_record? ? term_path(@term) : tutorial_group_path(@tutorial_group)), class: "secondary button" %>
  <%= f.submit class: "button"%>
<% end %>
