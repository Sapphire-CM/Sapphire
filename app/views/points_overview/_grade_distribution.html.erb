<div id="grading_scale">
  <table class='small-12 medium-9 medium-centered grid-center' id='grading_scale_table'>
    <thead>
      <th>Grade</th>
      <th colspan=3 class='text-center'>Points</th>
      <th>Students</th>
      <th>Percent</th>
    </thead>
    <tbody>
      <% @term.grading_scales.grades.ordered.each do |grading_scale| %>
        <tr>
          <th class='minimum-width text-center'><%= grading_scale.grade %></th>
          <td class='text-right'>
            <%= grading_scale.min_points %>
          </td>
          <td class='minimum-width'>-</td>
          <td class='minimum-width text-right'>
            <%= grading_scale.max_points %>
          </td>
          <td class='minimum-width text-right'>
            <%= grading_scale_service.count_for(grading_scale) %>
          </td>
          <td class='minimum-width text-right'>
            <%= number_to_percentage grading_scale_service.percent_for(grading_scale), precision: 1 %>
          </td>
        </tr>
      <% end %>
      <tr>
        <th>Sum</th>
        <td colspan='3'></td>
        <td class='text-right minimum-width'><%= grading_scale_service.graded_count %></td>
        <td></td>
      </tr>
      <tr><td colspan='6'><hr /></td></tr>
      <tr>
        <td class='minimum-width text-center'>
          <em>ungraded</em>
        </td>
        <td colspan='3'>&nbsp;</td>
        <td class='minimum-width text-right'>
          <%= grading_scale_service.ungraded_count %>
        </td>
        <td>
        </td>
      </tr>
    </tbody>
  </table>
</div>
