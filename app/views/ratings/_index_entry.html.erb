<tr id="<%= "rating_id_#{rating.id}" %>"
    data-update-position-action="<%= update_position_exercise_rating_group_rating_path(@exercise, rating.rating_group, rating) %>"
    class="index_entry rating" >
  <td class='title-column'>
    <% if rating.description.blank? %>
      <%= rating.title %>
    <% else %>
      <span data-tooltip class="has-tip" title="<%= rating.description %>">
        <%= rating.title %>
      </span>
    <% end %>
    <% if rating.automatically_checked? %>
      <span data-tooltip class='has-tip' title='Automatically checked via <%= automated_check_title rating.automated_checker_identifier %>'>A</span>
    <% end %>
  </td>

  <td class='value-column right-aligned'>
    <%= rating_points_description rating %>
  </td>

  <td class='buttons-column right-aligned minimum-width'>
    <%= link_to foundation_icon(:page_edit), edit_exercise_rating_group_rating_path(@exercise, rating.rating_group, rating), class: 'index_entry_edit', remote: true, data: {"reveal-id" => "reveal_modal"} %>

    <%= link_to foundation_icon(:x), exercise_rating_group_rating_path(@exercise, rating.rating_group, rating), class: 'index_entry_remove', method: :delete, data: { confirm: "Are you sure?" }, remote: true %>
  </td>
</tr>
