<li class='has-dropdown'>
  <%= link_to_current_term %>
  <ul class='dropdown'>
    <% if term_context? %>
      <li><%#= link_to "Exit term", context_path(current_term), :method => :delete %></li>
    <% end %>
    <% if terms.any? %>
      <li><label>Choose another course:</label></li>
      <% terms.each do |term| %>
        <li><%= link_to(course_term_title(term.course, term), course_term_path(term.course, term)).html_safe %></li>
      <% end %>
    <% else %>
      <p>No terms present.</p>
    <% end %>
  </ul>
  
</li>
