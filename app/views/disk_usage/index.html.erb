<% title @exercise.title, "Disk Usage" %>

<%= render "exercises/sidebar" %>
<%= render "exercises/edit_header" %>

<div class="section-container auto" data-section>
  <section class='active'>
    <p class="title" data-section-title><a href="#panel1">Overview</a></p>
			<div class="content" data-section-content>
			<table class='small-12'>
			<thead>
				<tr>
					<th>Mean</th>
					<th>Max</th>
					<th>Min</th> 
					<th>Sum</th>
				</tr>
			</thead>
			<tbody>
					<tr>
						<td><%= filesize @exercise.mean_upload_size %></td>
						<td><%= filesize @exercise.max_upload_size %></td>
						<td><%= filesize @exercise.min_upload_size %></td>
						<td><%= filesize @exercise.sum_upload_size %></td>
					</tr>		
			</tbody>
			</table>
		</div>
	</section>
	<section>
		<p class="title" data-section-title><a href="#panel2">Student Group Upload Sizes</a></p>	
			<div class="content" data-section-content>
				<table class='small-12'>
				<thead>
					<tr>
						<th>Student Group</th>
						<th>Upload Size</th>
					</tr>
				</thead>
				<tbody>
				  <% @exercise.term.student_groups.each do |student_group|	%>
				  	<tr>
				  		<td><%= student_group.title %></td>
				  		<% if @exercise.student_group_submission_size(student_group).present? %>
				  			<td><%= filesize @exercise.student_group_submission_size(student_group) %></td>	
				  		<% else %>
				  			<td>No Upload present</td>
				  		<% end %>		
				  	</tr>	
				  <% end %>
				</tbody>
				</table>	
			</div>
	</section>	
</div>