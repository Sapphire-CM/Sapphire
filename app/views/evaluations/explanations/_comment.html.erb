<div id="<%= dom_id(comment) %>" class="comment">
  <div class='row'>
    <div class='large-12 columns'>
      <span>
        <strong><%= comment.account.fullname %></strong> commented:
      </span>
      <% if policy(Comment.new(term: @term)).create? %>
        <span class='comment_entry_icons'>
          <%= link_to foundation_icon(:page_edit), edit_evaluation_explanation_path(@commentable, comment), remote: true %>
          <%= link_to foundation_icon(:x), evaluation_explanation_path(@commentable, comment), method: :delete, remote: true, data: { confirm: "Are you sure?" }, id: dom_id(@commentable.becomes(Evaluation), 'comment_delete') %>
        </span>
      <% end %>
    </div>
  </div>
  <%= render "comment_content", comment: comment %> 
</div>
