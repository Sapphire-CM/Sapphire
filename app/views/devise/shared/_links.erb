<% sidebar do %>
<ul class='side-nav'>
  <%= side_navigation_item "Log in", new_session_path(resource_name), active: controller_name == "sessions" %>
  

<%- if devise_mapping.registerable? %>
  <%= side_navigation_item "Register", new_registration_path(resource_name), active: controller_name == "registrations" %>
<% end -%>

<%- if devise_mapping.recoverable? %>
  <%= side_navigation_item "Forgot your password?", new_password_path(resource_name), active: controller_name == "passwords" %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
<% end -%>

</ul>

<% end %>
