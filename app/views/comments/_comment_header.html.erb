<%= comment_heading(comment) %>
<% if policy(Comment.new(term: @term)).create? %>
  <span class='comment_entry_icons'>
    <%= link_to foundation_icon(:page_edit), edit_path, remote: true %>
    <%= link_to foundation_icon(:x), delete_path, method: :delete, remote: true, data: { confirm: "Are you sure?" }, id: dom_id(@commentable, "#{type}_comment_delete") %>
  </span>
<% end %>
