<% title @course.title %>

<% sidebar do %>
  <%= link_to "Edit", edit_course_path(@course), class: "small button" %>
  <%= link_to "Delete", course_path(@course), method: :delete, class: "small alert button", confirm: "Are you sure?" %>
<% end %>

<div class="section-container tabs" data-section="tabs">
  <section>
    <p class="title" data-section-title><a href="#">Terms</a></p>
    <div class="content" data-section-content>
      <% if @terms.any? %>
        <table class='large-12'>
          <thead>
            <tr>
              <th>Title</th>
              <th>Tutorials</th>
              <th>Registered Students</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          <% @terms.each do |term| %>
            <tr>
              <th><%= term.title %></th>
              <td><%= pluralize term.tutorial_groups.count, "Tutorial" %></td>
              <td><%= term.students.count %></td>

              <td class='right-aligned'>
                <%= link_to "View", course_term_path(@course, term), class: "small button" %>
                <%= link_to "Edit", edit_course_term_path(@course, term), class: "small button" %>
                <%= link_to "Delete", course_term_path(@course, term), class: "small alert button", method: :delete, confirm: "Are you sure?" %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      <% else %>
        <p>No terms present.</p>
      <% end %>
      <p><%= link_to "Add Term", new_course_term_path(@course), class: "button" %></p>
    </div>
  </section>
  <section>
    <p class="title" data-section-title><a href="#">Description</a></p>
    <div class="content" data-section-content>
      <% if @course.description? %>
        <%= simple_format @course.description %>
      <% else %>
        <p>No description present.</p>
      <% end %>
    </div>
  </section>
</div>
