<%= simple_form_for(setup_submission(@submission), url: exercise_student_submission_path(@exercise)) do |f| %>
  <%= field_set_tag do %>
    <% if @submission.errors.any? %>
      <% @submission.errors.full_messages.each do |msg| %>
        <div data-alert class="alert-box alert">
          <%= msg %>
        </div>
      <% end %>
    <% end %>

    <%= f.simple_fields_for :submission_assets do |sa_f| %>
      <%= sa_f.input :file, as: :file, label: submission_asset_file_label(@exercise) %>
    <% end %>
    <%= f.submit @submission.new_record? ? "Upload Submission" : "Update Submission", class: "small button" %>
  <% end %>
<% end %>
