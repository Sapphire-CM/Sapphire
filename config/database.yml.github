sqlite: &sqlite
  adapter: sqlite3
  database: db/test.sqlite

postgresql: &postgresql
  adapter: postgresql
  host: <%= ENV["POSTGRES_HOST"] %>
  database: <%= ENV["POSTGRES_DATABASE"] %>
  username: <%= ENV["POSTGRES_USER"] %>
  password: <%= ENV["POSTGRES_PASSWORD"] %>

defaults: &defaults
  pool: 5
  timeout: 5000
  <<: *<%= ENV['DB'] || "sqlite" %>

test:
  <<: *defaults