<% title @rating_group.title, rating_group_subtitle_points(@rating_group) %>

<% sidebar do %>
  <%= link_to "Edit", edit_course_term_exercise_rating_group_path(current_course, current_term, @exercise, @rating_group), class: "small button" %>
  <%= link_to "Delete", course_term_exercise_path(current_course, current_term, @exercise), method: :delete, confirm: "Are you sure?", class: "small alert button" %>
<% end %>

<div class="section-container tabs" data-section="tabs">
    <section>
      <p class="title" data-section-title><a href="#">Ratings</a></p>
      <div class="content" data-section-content>

        <% if @rating_group.ratings.any? %>
          <table class='large-12'>
            <thead>
              <tr>
                <th>Title</th>
                <th>Points</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @rating_group.ratings.each do |rating| %>
                <tr>
                  <td><%= rating.title %></td>

                  <td class='right-aligned'>
                    <%= rating_points_description rating %>
                  </td>

                  <td class='right-aligned'>
                    <%= link_to "View", course_term_exercise_rating_group_rating_path(current_course, current_term, @exercise, @rating_group, rating), class: "tiny button" %>
                    <%= link_to "Edit", edit_course_term_exercise_rating_group_rating_path(current_course, current_term, @exercise, @rating_group, rating), class: "tiny button" %>
                    <%= link_to "Delete", course_term_exercise_rating_group_rating_path(current_course, current_term, @exercise, @rating_group, rating), class: "tiny alert button", method: :delete, confirm: "Are you sure?" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p>There are no ratings present.</p>
        <% end %>

        <p>
          <%= link_to 'New Rating', new_course_term_exercise_rating_group_rating_path(current_course, current_term, @exercise, @rating_group), class: "small button"  %>
        </p>

      </div>
    </section>

    <section>
      <p class="title" data-section-title><a href="#">Description</a></p>
      <div class="content" data-section-content>
        <% if @rating_group.description? %>
          <%= simple_format @rating_group.description %>
        <% else %>
          <p>No description present.</p>
        <% end %>
      </div>
    </section>
</div>
