var html = "<%=j render 'index_entry', course: @course, terms: policy_scope(@course.terms) %>";

$('#course_index_entries .index_entry_none.course').slideUp(function(){
  $html = $(html).hide();
  $('#course_index_entries').append($html);
  $html.slideDown();
  $('#reveal_modal').foundation('reveal', 'close');
});
